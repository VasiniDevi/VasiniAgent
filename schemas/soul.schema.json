{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vasini.dev/schemas/soul.schema.json",
  "title": "Soul Layer",
  "description": "Schema for the Soul layer defining agent identity and personality",
  "type": "object",
  "required": ["schema_version", "identity", "personality"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "identity": {
      "type": "object",
      "required": ["name", "language"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "language": { "type": "string", "minLength": 2 },
        "description": { "type": "string" }
      },
      "additionalProperties": false
    },
    "personality": {
      "type": "object",
      "required": ["communication_style", "verbosity", "proactivity", "confidence_expression"],
      "properties": {
        "communication_style": {
          "type": "string",
          "enum": ["formal", "professional", "casual", "academic"]
        },
        "verbosity": {
          "type": "string",
          "enum": ["concise", "balanced", "detailed"]
        },
        "proactivity": {
          "type": "string",
          "enum": ["reactive", "balanced", "proactive"]
        },
        "confidence_expression": {
          "type": "string",
          "enum": ["cautious", "balanced", "assertive"]
        }
      },
      "additionalProperties": false
    },
    "tone": {
      "type": "object",
      "properties": {
        "default": { "type": "string" },
        "on_success": { "type": "string" },
        "on_error": { "type": "string" },
        "on_uncertainty": { "type": "string" }
      },
      "additionalProperties": true
    },
    "principles": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 3,
      "maxItems": 7
    },
    "adaptations": {
      "type": "object",
      "properties": {
        "beginner_user": { "type": "string" },
        "expert_user": { "type": "string" },
        "crisis_mode": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
